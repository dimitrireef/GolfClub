<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/red_fade"
                android:endColor="@color/red_fade"
                android:startColor="@color/red_fade" />

            <stroke
                android:width="2dp"
                android:color="#171717" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="@color/red_fade"
                android:endColor="@color/red_fade"
                android:startColor="@color/red_fade" />
        </shape>
    </item>

</layer-list>