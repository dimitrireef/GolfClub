<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollMe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@drawable/scrollbar_drawable" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyInfoFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/textview_top_corner" >

                <TextView
                    android:id="@+id/txInfoFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="@string/date_commencer_jeu"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout02"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textbars_golface"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColorHint="@color/button_bleu"
                android:textSize="12sp" >

                <TextView
                    android:id="@+id/btCalenderFrom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/ImageView02"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="@string/mm"
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/button_bleu"
                    android:textColorHint="@color/button_bleu"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/ImageView02"
                    android:src="@drawable/datepicker" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/cross"
                    android:text="Button"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyInfoToDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/textview_top_corner" >

                <TextView
                    android:id="@+id/txInfoToDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="@string/date_terminer_jeu"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayout01"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/textbars_golface"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColorHint="@color/button_bleu"
                android:textSize="12sp" >

                <TextView
                    android:id="@+id/btCalenderTo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/txNombreMessage"
                    android:background="@color/transparent"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="@string/mm"
                    android:inputType="textPersonName"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="@color/button_bleu"
                    android:textColorHint="@color/button_bleu"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/ImageView04"
                    android:src="@drawable/datepicker" />

                <ImageView
                    android:id="@+id/txNombreMessage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/cross"
                    android:text="Button"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/txIndice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/indice"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_two_layout"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsDix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/de_zero"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsVight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/de_dix_a_vingt"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsTrente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/de_vingt_a_trente"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/btMoinsQuarante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/de_trente_a_quarente"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/age"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_two_layout"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radAgeMoins25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_vight_cinq"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radAgeMoinsTrenteCinq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_trente_cinq"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radAgeMoinsQuaranteCinq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_quanrante_cinq"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radAgeMoinsCinquante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_cinquante_cinq"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radMoinsSoixanteCinq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_soixante_cinq"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radAgeDelaSoixanteCinq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/audela_cinquantecinq"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/dis"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_two_layout"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsDixKm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_vingt_km"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsVightKm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_qua_km"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/btMoinsTrenteKm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_soi_km"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/btMoinsQuaranteKm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moins_quatre_vin_km"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

         

            <Button
                android:id="@+id/button1"
                 android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_corner"
                android:text="@string/recherche"
                android:textColor="@color/white"
                android:textStyle="bold"
                 />

        </LinearLayout>
    </ScrollView>

</LinearLayout>